<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="175dp">

            <ImageView
                android:id="@+id/cover"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                tools:src="@drawable/value_1" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/photo_profile"
                android:layout_width="@dimen/image_width"
                android:layout_height="@dimen/image_width"
                android:layout_centerInParent="true"
                android:layout_gravity="center"
                tools:src="@mipmap/ic_launcher_round" />

            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/photo_profile"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center"
                android:gravity="center"
                android:textColor="@color/white"
                android:textStyle="bold"
                tools:text="Alvin Putera" />
        </RelativeLayout>


        <TextView
            android:id="@+id/notification"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_bottom_menu_profile"
            android:background="@color/white"
            android:drawableLeft="@drawable/ic_person_pin"
            android:gravity="center_vertical"
            android:padding="@dimen/padding_menu_porfile"
            android:text="Detil Profil"
            android:textColor="@color/black" />


        <TextView
            android:id="@+id/history"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_bottom_menu_profile"
            android:background="@color/white"
            android:drawableLeft="@drawable/ic_history"
            android:gravity="center_vertical"
            android:padding="@dimen/padding_menu_porfile"
            android:text="Riwayat pesanan"
            android:textColor="@color/black" />


        <TextView
            android:id="@+id/change_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_bottom_menu_profile"
            android:background="@color/white"
            android:drawableLeft="@drawable/ic_key"
            android:gravity="center_vertical"
            android:padding="@dimen/padding_menu_porfile"
            android:text="Ganti Password"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/logout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_bottom_menu_profile"
            android:background="@color/white"
            android:drawableLeft="@drawable/ic_power"
            android:gravity="center_vertical"
            android:padding="@dimen/padding_menu_porfile"
            android:text="Logout"
            android:textColor="@color/black" />

    </LinearLayout>

</ScrollView>